datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Employee {
  id               Int     @id @default(autoincrement())
  firstName        String
  lastName         String
  email            String  @unique
  address          String
  salary           Float
  employmentStatus String
  gender           String
  contact          String
  role             String
  emergencyContact String
  dateOfBirth      String
  dateOfHire       String
}


model Restaurant {
  id               Int      @id @default(autoincrement())
  name             String
  email            String   @unique
  address          String
  contact          String
  openingTime      String
  closingTime      String
  status           String
  wifiCode         String
  postalCode       String
}



model Category {
  id               Int      @id @default(autoincrement())
  name             String
}